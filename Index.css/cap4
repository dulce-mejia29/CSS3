/* Pseudo-elementos */
p::first-letter {
    font-size: 2em;
    font-weight: bold;
    color: blue;
}

p::first-line {
    text-transform: uppercase;
}

/* Agregar contenido antes y después de un elemento */
.resaltado::before {
    content: "«";
    color: red;
}

.resaltado::after {
    content: "»";
    color: red;
}

/* Cambiar el color del texto seleccionado */
::selection {
    background-color: orange;
    color: white;
}

/* Pseudo-clases de interacción */
a:hover {
    color: red;
    text-decoration: underline;
}

a:active {
    color: green;
}

/* Campos de entrada en foco */
input:focus {
    background-color: yellow;
    border: 2px solid orange;
}

/* Seleccionar elementos en posiciones específicas */
li:first-child {
    font-weight: bold;
}

li:last-child {
    font-style: italic;
}

li:nth-child(odd) {
    background-color: #f0f0f0;
}

/* Excluir un tipo de elemento */
li:not(:first-child) {
    border-top: 1px solid gray;
}
